{% block head_title %}简言简语-语落世界{% endblock head_title %}
{% block body %}
			
		<!-- Main Wrapper -->
			<div id="main-wrapper">

				<!-- Main -->
					<div id="main" class="container">
						<div class="row">
						
							<!-- Content -->
								<div id="content" class="12u skel-cell-mainContent">

									<!-- Post -->
										<article class="is-post">
											<header>
												<h2>简语</h2>
											</header>
                                            {% if brief_detail.thumbnail %}
											<span class="image image-full">
                                                <img src="{{ MEDIA_URL }}{{ brief_detail.thumbnail }}" alt="pictures" width="781" />
                                            </span>
                                            {% endif %}
											<h3>{{ brief_detail.createtime }} -- 创建人: {{ brief_detail.user }}</h3>
											<p>
                                                {{ brief_detail.brief|linebreaksbr }}
											</p>
										</article>
								
								</div>

						</div>
					</div>

			</div>

{% endblock body %}